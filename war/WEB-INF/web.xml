<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>Main</servlet-name>
		<servlet-class>searchengine.servlet.MainServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Main</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>About</servlet-name>
		<servlet-class>searchengine.servlet.AboutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>About</servlet-name>
		<url-pattern>/about</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Search</servlet-name>
		<servlet-class>searchengine.servlet.SearchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Search</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AddDocument</servlet-name>
		<servlet-class>searchengine.servlet.AddDocumentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddDocument</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ListDocument</servlet-name>
		<servlet-class>searchengine.servlet.ListDocumentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListDocument</servlet-name>
		<url-pattern>/list</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ShowDocument</servlet-name>
		<servlet-class>searchengine.servlet.ShowDocumentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowDocument</servlet-name>
		<url-pattern>/show</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ClearData</servlet-name>
		<servlet-class>searchengine.servlet.ClearDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ClearData</servlet-name>
		<url-pattern>/clear</url-pattern>
	</servlet-mapping>

<!-- 	<welcome-file-list> -->
<!-- 		<welcome-file>index.html</welcome-file> -->
<!-- 	</welcome-file-list> -->
</web-app>
